<h1>Friends</h1>

<div class="search-friends-area">
  <h3>Search Friends</h3>
  <%= form_tag search_friend_path, remote:true, method: :get do %>
    <div class="form-group row">
      <div class="col-sm-9 pr-0">
        <%= text_field_tag :friend, params[:friend], placeholder: "search for...", autofocus: true, class: "form-control form-control-lg" %>
      </div>
      <div class="col-sm-3 pl-0">
      <%= button_tag type: :submit, class: "btn btn-success btn-lg" do %>
        <%= fa_icon 'search' %>
      <% end %>
      </div>
    </div>
  <% end %>
</div>

<div id="friend-results">

</div>

<% if !@friends.empty? %>
  <%= render 'friends/list' %>
<% end %>